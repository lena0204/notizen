<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/padding_default">

        <TextView
            android:id="@+id/label_color"
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:paddingStart="10dp"
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/label_icon"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/padding_categories"
                android:src="@mipmap/ic_priority"/>

            <TextView
                android:id="@+id/label_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/label_icon"
                android:textSize="@dimen/textSize_categories"
                android:textStyle="italic"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/label_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/label_reminder"
                android:visibility="invisible"
                android:text="0"/>

            <TextView
                android:id="@+id/label_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                android:alpha="1"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/label_reminder"
                android:lines="1"
                android:textStyle="bold"
                android:textSize="21sp"
                android:alpha="1">
            </TextView>

            <TextView
                android:id="@+id/label_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_title"
                android:minLines="0"
                android:alpha="1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_categories"
                android:layout_marginTop="@dimen/padding_categories"
                android:layout_below="@id/label_text"
                android:gravity="end"
                android:textSize="@dimen/textSize_date"
                android:alpha="0.7"/>

        </RelativeLayout>

    </LinearLayout>

