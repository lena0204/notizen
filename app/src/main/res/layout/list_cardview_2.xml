<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_show_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_list_category"
            android:layout_width="@dimen/category_bar_width"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

                <ToggleButton
                    android:id="@+id/iv_list_protected"
                    style="@style/togglebutton_card"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector_protected" />

                <TextView
                    android:id="@+id/tv_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_list_protected"
                    android:layout_marginBottom="6dp"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="@string/test_titel">
                </TextView>

            <TextView
                android:id="@+id/tv_list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_list_title"
                android:minLines="0"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"/>

            <ToggleButton
                android:id="@+id/iv_list_priority"
                style="@style/togglebutton_card"
                android:layout_below="@id/tv_list_content"
                android:background="@drawable/selector_priority"/>

            <TextView
                android:id="@+id/tv_list_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_list_time"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_below="@id/tv_list_content"
                android:alpha="0.7"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/textSize_date" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>