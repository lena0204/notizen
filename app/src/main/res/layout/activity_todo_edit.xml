        android:layout_margin="@dimen/padding_between">

        <TextView
            android:id="@+id/tv_edit_protected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/protected_n"
            android:alpha="1"
            android:textSize="@dimen/textSize_content" />

        <Switch
            android:id="@+id/switch_edit_protected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_edit_protected"
            android:layout_alignParentEnd="true" />

    </RelativeLayout> -->

    <!-- nÃ¶tig damit der save button unten noch erscheint -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_edit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/todo_edit_title"
            android:imeOptions="actionNext" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_edit_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="top"
        android:hint="@string/todo_edit_description"
        android:imeOptions="actionNext"/>

    <Button
        android:id="@+id/bt_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_edit_confirm"/>
</LinearLayout>