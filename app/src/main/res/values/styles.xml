<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/actionBarColor</item>
        <item name="android:colorPrimaryDark">@color/statusBarColor</item>
        <item name="android:colorAccent">@color/accentColor2</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- TODO auf Fontfamily festlegen, Farben für die Prioritätsicons entscheiden -->

    <style name="AppThemeDark" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/actionBarColorD</item>
        <item name="android:colorPrimaryDark">@color/statusBarColorD</item>
        <item name="android:colorAccent">@color/accentColor2</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- FIXED_ Dialog benötigt AppCompat Theme zur Anzeige, sonst Resource 0x00-Fehler -->
    </style>

    <!-- einheitlicher Stil für das Anzeigen der Notizen -->
    <style name="style_note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textSize">@dimen/textSize_show</item>
        <item name="android:alpha">1</item>
    </style>

    <!-- Style für den Spinner -->
    <style name="spinner_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style für die Icons vom Widget -->
    <style name="widget_icons">
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_margin">@dimen/margin_icons</item>
    </style>

    <style name="togglebutton_image">
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:backgroundTint">?android:attr/colorAccent</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="togglebutton_card" parent="togglebutton_image">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginEnd">@dimen/padding_categories</item>
        <item name="android:enabled">false</item>
        <item name="android:backgroundTint">?android:attr/textColorPrimary</item>
    </style>

    <style name="togglebutton_text" parent="android:Widget.DeviceDefault.Light.Button.Toggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
