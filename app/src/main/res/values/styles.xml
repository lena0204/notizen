<resources>

    <style name="AppThemeGrey" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary_bluegrey</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_bluegrey</item>
        <item name="android:colorAccent">@color/accent_indigo</item>
        <item name="android:colorForeground">@color/black</item>
    </style>

    <style name="AppThemeGreyDark" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary_bluegrey</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_bluegrey</item>
        <item name="android:colorAccent">@color/accent_indigo</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- FIXED_ Dialog benötigt AppCompat Theme zur Anzeige, sonst Resource 0x00-Fehler -->
    </style>

    <!-- einheitlicher Stil für das Anzeigen der Notizen -->
    <style name="style_note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textSize">@dimen/textSize_show</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="edit_note_views">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="togglebutton_image">
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:backgroundTint">?android:attr/colorForeground</item>
        <item name="android:backgroundTintMode">src_atop</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:tint">@color/black</item>
        <item name="android:tintMode">src_atop</item>
        <item name="android:background">@drawable/floating_button</item>
    </style>

    <!-- Constraint styles -->

    <style name="tb_show_constraint" parent="togglebutton_image">
        <item name="android:layout_marginStart">@dimen/padding_default</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
    </style>

    <style name="notes_show_constraint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
    </style>

    <style name="notes_edit_constraint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="tb_edit_menu_constraint" parent="togglebutton_image">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:backgroundTint">@color/light_bluegrey50</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
